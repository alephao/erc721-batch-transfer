{
  "scripts": {
    "prettier": "prettier --write 'src/**/*.sol'",
    "prettier:list": "prettier --list-different 'src/**/*.sol'",
    "prettier:check": "prettier --check 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "solhint:check": "solhint --config ./.solhint.json './src/**/*.sol'",
    "lint": "yarn prettier && yarn solhint",
    "lint:check": "yarn prettier:check && yarn solhint:check",
    "prepare": "husky install",
    "typechain": "typechain --target ethers-v5 --out-dir scripts/contracts out/**/*.json",
    "deploy": "ts-node scripts/deploy.ts"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^10.0.0",
    "@types/node": "^17.0.24",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "ts-node": "^10.7.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "src/**/*.sol": "yarn prettier"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "ethers": "^5.6.4"
  }
}
